<div>
  <h1 class="font-bold text-4xl py-5">Projects</h1>
</div>

<div>
  <table class="table-auto border-collapse border border-gray-400">
    <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td class="border-b border-gray-100 p-4 pl-4 dark:border-gray-700"><%= project.title %></td>
        <td class="border-b border-gray-100 p-4 pl-4 dark:border-gray-700">
          <%= link_to 'Show', project_path(project), class: "bg-blue-200 py-2 px-4 rounded" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
